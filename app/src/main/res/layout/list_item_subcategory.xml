<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="@dimen/margin_4"
    android:orientation="vertical">

    <TextView
        android:id="@+id/tvProdName"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingBottom="@dimen/margin_8"
        android:paddingLeft="?android:attr/expandableListPreferredChildPaddingLeft"
        android:paddingTop="@dimen/margin_12"
        android:textColor="@color/black_87"
        android:textSize="@dimen/txt_14"
        tools:text="kjfnjknff" />


    <LinearLayout
        android:id="@+id/llProductColor"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/margin_8"
        android:gravity="left"
        android:orientation="horizontal"
        android:paddingLeft="?android:attr/expandableListPreferredChildPaddingLeft" />

    <TextView
        android:id="@+id/tvProductPrice"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/margin_8"
        android:gravity="center"
        android:paddingLeft="?android:attr/expandableListPreferredChildPaddingLeft"
        android:textColor="@color/black_87"
        android:textSize="@dimen/txt_14"
        tools:text="234" />

    <Spinner
        android:id="@+id/spinnerSize"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/margin_8"
        android:gravity="center"
        android:paddingLeft="?android:attr/expandableListPreferredChildPaddingLeft"
        android:prompt="@string/spinner_title"
        android:textColor="@color/black_87"
        android:textSize="@dimen/txt_14"
        tools:text="Large" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:paddingBottom="@dimen/margin_4"
        android:paddingLeft="?android:attr/expandableListPreferredChildPaddingLeft">

        <TextView
            android:id="@+id/tvViewed"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:drawableLeft="@drawable/ic_visibile"
            android:drawablePadding="@dimen/margin_8"
            android:drawableStart="@drawable/ic_visibile"
            android:gravity="center"
            android:textColor="@color/black_87"
            tools:text="64844" />

        <TextView
            android:id="@+id/tvShared"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/margin_16"
            android:drawableLeft="@drawable/ic_share"
            android:drawablePadding="@dimen/margin_8"
            android:drawableStart="@drawable/ic_share"
            android:gravity="center"
            android:textColor="@color/black_87"
            tools:text="64844" />

        <TextView
            android:id="@+id/tvOrdered"
            android:layout_width="wrap_content"
            android:layout_height="@dimen/margin_24"
            android:layout_marginLeft="@dimen/margin_16"
            android:drawableLeft="@drawable/order"
            android:drawablePadding="@dimen/margin_8"
            android:drawableStart="@drawable/order"
            android:gravity="center"
            android:textColor="@color/black_87"
            tools:text="64844" />
    </LinearLayout>
</LinearLayout>